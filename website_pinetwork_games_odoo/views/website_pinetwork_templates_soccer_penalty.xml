<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <template id="soccer_penalty" name="Soccer Penalty">
            <t t-call="web.layout">
            &lt;!DOCTYPE html&gt;
            <html>

                <head>
                    <meta charset="UTF-8"/>
                    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no"/>
                    <title>Super Penalty 3D Arena</title>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
                    <style>
                        @import url('https://fonts.googleapis.com/css2?family=Russo+One&amp;display=swap');

                        /* --- MOBILE FIRST CSS BASE --- */
                        :root {
                            /* Variable para altura real en móviles (descarta barra navegador) */
                            --app-height: 100vh;
                        }

                        body {
                            margin: 0;
                            overflow: hidden;
                            background-color: #111;
                            font-family: 'Russo One', sans-serif;
                            user-select: none;
                            -webkit-user-select: none;
                            touch-action: none; 
                            -webkit-tap-highlight-color: transparent;
                            width: 100vw;
                            height: 100vh; /* Fallback */
                            height: 100dvh; /* Moderno: Dynamic Viewport Height */
                        }

                        #game-container {
                            position: absolute;
                            top: 0;
                            left: 0;
                            width: 100%;
                            height: 100%;
                            z-index: 1;
                        }

                        #ui-layer {
                            position: absolute;
                            top: 0;
                            left: 0;
                            width: 100%;
                            height: 100%;
                            pointer-events: none;
                            z-index: 10;
                            display: flex;
                            flex-direction: column;
                            justify-content: space-between;
                            /* Respetar áreas seguras (Notch/Isla dinámica) */
                            padding-top: env(safe-area-inset-top);
                            padding-bottom: env(safe-area-inset-bottom);
                            padding-left: env(safe-area-inset-left);
                            padding-right: env(safe-area-inset-right);
                            box-sizing: border-box;
                        }

                        /* HUD - Optimizado para que no tape el juego */
                        .hud-top {
                            padding: 15px;
                            display: flex;
                            justify-content: space-between;
                            align-items: flex-start;
                            pointer-events: auto;
                            width: 100%;
                            box-sizing: border-box;
                        }

                        .score-board {
                            background: rgba(0, 0, 0, 0.5); /* Más transparente */
                            backdrop-filter: blur(4px);
                            padding: 8px 14px;
                            border-radius: 12px;
                            border: 1px solid rgba(255, 255, 255, 0.15);
                            color: white;
                            font-size: 15px;
                            display: flex;
                            gap: 12px;
                            white-space: nowrap;
                            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
                        }

                        .score-item span {
                            color: #ffcc00;
                            font-size: 1.1em;
                        }
                        
                        /* Botón Reset compacto */
                        .reset-icon-btn {
                            background: rgba(255, 255, 255, 0.15);
                            border: 1px solid rgba(255, 255, 255, 0.3);
                            color: white;
                            width: 40px;
                            height: 40px;
                            border-radius: 50%;
                            font-size: 18px;
                            cursor: pointer;
                            display: flex;
                            align-items: center;
                            justify-content: center;
                            pointer-events: auto;
                            margin-left: 10px;
                            backdrop-filter: blur(2px);
                        }
                        
                        .reset-icon-btn:active {
                            background: #ff0055;
                            transform: scale(0.95);
                        }

                        /* Mensajes Centrales */
                        #message-overlay {
                            position: absolute;
                            top: 40%; /* Subir un poco para no tapar al portero */
                            left: 50%;
                            transform: translate(-50%, -50%);
                            text-align: center;
                            opacity: 0;
                            transition: opacity 0.2s, transform 0.2s;
                            pointer-events: none;
                            width: 100%;
                        }

                        #message-overlay.visible {
                            opacity: 1;
                            transform: translate(-50%, -50%) scale(1);
                            pointer-events: auto;
                        }

                        #main-text {
                            font-size: clamp(40px, 15vw, 90px); /* Texto fluido */
                            color: white;
                            text-transform: uppercase;
                            margin: 0;
                            background: linear-gradient(to bottom, #fff 0%, #ddd 50%, #fff 100%);
                            -webkit-background-clip: text;
                            -webkit-text-fill-color: transparent;
                            filter: drop-shadow(0 0 15px rgba(0,0,0,0.9));
                            line-height: 1;
                        }

                        #sub-text {
                            font-size: clamp(16px, 5vw, 24px);
                            color: #ffcc00;
                            margin-top: 5px;
                            text-shadow: 0 2px 4px rgba(0,0,0,0.9);
                            font-weight: normal;
                            letter-spacing: 1px;
                        }

                        /* Pista Visual */
                        #interaction-hint {
                            position: absolute;
                            bottom: 15%;
                            left: 0;
                            width: 100%;
                            color: rgba(255, 255, 255, 0.7);
                            font-size: 13px;
                            text-align: center;
                            animation: pulse 2s infinite;
                            pointer-events: none;
                            text-transform: uppercase;
                            letter-spacing: 2px;
                        }

                        .arrow-guide {
                            display: block;
                            width: 24px;
                            height: 24px;
                            border-top: 3px solid rgba(255, 255, 255, 0.8);
                            border-right: 3px solid rgba(255, 255, 255, 0.8);
                            transform: rotate(-45deg);
                            margin: 0 auto 8px auto;
                            animation: swipeUp 1.5s infinite;
                        }

                        /* Botón de Acción Grande */
                        #restart-btn {
                            pointer-events: auto;
                            background: linear-gradient(45deg, #ff0055, #ff5500);
                            border: none;
                            padding: 14px 35px;
                            color: white;
                            font-family: 'Russo One', sans-serif;
                            font-size: 18px;
                            border-radius: 30px;
                            cursor: pointer;
                            box-shadow: 0 8px 20px rgba(255, 0, 85, 0.5);
                            display: none;
                            margin-top: 20px;
                            touch-action: manipulation;
                            text-transform: uppercase;
                        }

                        #restart-btn:active {
                            transform: scale(0.96);
                        }

                        @keyframes pulse {
                            0%, 100% { opacity: 0.5; }
                            50% { opacity: 1; }
                        }

                        @keyframes swipeUp {
                            0% { transform: rotate(-45deg) translate(0, 0); opacity: 0; }
                            50% { opacity: 1; }
                            100% { transform: rotate(-45deg) translate(-10px, -10px); opacity: 0; }
                        }

                        /* --- MEDIA QUERIES --- */
                        @media (min-width: 768px) {
                            .hud-top { padding: 30px; }
                            .score-board { font-size: 24px; padding: 12px 30px; gap: 30px; }
                            .reset-icon-btn { width: 50px; height: 50px; font-size: 24px; }
                            #restart-btn { padding: 18px 50px; font-size: 22px; }
                            #restart-btn:hover { transform: scale(1.05); }
                        }
                    </style>
                    
                    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
                    
                    <script src="https://sdk.minepi.com/pi-sdk.js"></script>
                    
                    <script type="text/javascript">
                        startCommonAppsAI();
                    </script>
                    
                    <div id="blockingOverlay" style="display: flex; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.7); z-index: 9999; justify-content: center; align-items: center;">
                        <div style="display: flex; background-color: white; padding: 30px; border-radius: 10px; text-align: center; font-family: Arial, sans-serif; font-size: 24px; color: #333;">
                            <div id="blocking-message" style="display: none;">
                                <div>
                                    Go to Pi Browser
                                </div>
                                <div>
                                    <a class="anchor-click" style="color: blue;" href="#" target="_blank">Click here</a>
                                </div>
                            </div>
                            <div id="paying-message" style="display: none;">
                                <div>
                                    Donate to unlock Apps
                                </div>
                                <div>
                                    <a class="anchor-click" style="color: blue;" href="#">Click here</a>
                                </div>
                                <div t-if="mainnet in ['Mainnet ON', 'Mainnet OFF']">
                                    <br/>
                                    <a id="test_app" style="color: blue;" href="#">Or here to test this app</a>
                                </div>
                            </div>
                            <div id="loading-message" style="display: block;">
                                Loading...
                            </div>
                        </div>
                    </div>
                    <input type="hidden" id="sandbox" t-att-value="sandbox"/>
                    <input type="hidden" id="mainnet" t-att-value="mainnet"/>
                    <div id="pi_prowser_message" style="display:none;">You need to access from Pi Browser.</div>
                </head>
                
                <body translate="no">
                    
                    <div id="game-container"></div>

                    <div id="ui-layer">
                        <div class="hud-top">
                            <div class="score-board">
                                <div class="score-item">Goals: <span id="score">0</span></div>
                                <div style="width: 20px;"></div>
                                <div class="score-item">Attempts: <span id="attempts">0</span></div>
                                <a id="back" class="score-item" style="color: white !important" href="/"><i class="fas fa-step-backward"></i></a>
                            </div>
                            <button class="reset-icon-btn" id="full-reset-btn" title="Reset Match">↻</button>
                        </div>

                        <div id="message-overlay">
                            <h1 id="main-text">GOAL!</h1>
                            <p id="sub-text">+1 Point</p>
                            <button id="restart-btn">Shoot Again</button>
                        </div>

                        <div id="interaction-hint">
                            <div class="arrow-guide"></div>
                            Swipe fast to shoot
                        </div>
                    </div>
                    
                    <script type="text/javascript" src="/website_pinetwork_games_odoo/static/src/js/games/soccer_penalty_functions.js?v=1.103"></script>

                </body>

            </html>
            </t>
		</template>

</odoo>
